pipeline {

    agent any

    tools {
        jdk 'jdk17'
        maven 'maven3'
        nodejs 'nodejs25'
    }

    environment {
        SCANNER_HOME = tool 'sonarqube-scanner'
        DOCKER_IMAGE = 'tejasgowramma123/bms-app:latest'
        AWS_REGION = 'us-east-1'
        EKS_CLUSTER_NAME = 'bookmyshow-eks'
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/staragile2016/Book-My-Show.git'
                sh 'ls -la'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=BMS \
                        -Dsonar.sources=bookmyshow-app \
                        -Dsonar.exclusions=**/node_modules/**
                    """
                }
            }
        }

        stage('Skip Quality Gate (Fast)') {
            steps {
                echo "Skipping quality gate to keep pipeline fast."
            }
        }

        stage('Install Dependencies') {
            steps {
                sh """
                    cd bookmyshow-app
                    rm -rf node_modules package-lock.json
                    npm install --silent
                """
            }
        }

       stage('OWASP FS Scan') {
    steps {
        dependencyCheck additionalArguments: '''
            --scan bookmyshow-app
            --format XML
            --out .
            --disableAssembly
            --enableExperimental
            --noupdate
        ''',
        odcInstallation: 'odc'

        dependencyCheckPublisher pattern: '**/dependency-check-report.xml'
    }
}


        stage('Trivy FS Scan (Non-Blocking)') {
            steps {
                catchError(buildResult: 'SUCCESS', stageResult: 'FAILURE') {
                    sh 'trivy fs bookmyshow-app > trivyfs.txt'
                }
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-creds') {
                        sh """
                            echo "Building Docker image..."
                            docker build -t $DOCKER_IMAGE bookmyshow-app

                            echo "Pushing Docker image..."
                            docker push $DOCKER_IMAGE
                        """
                    }
                }
            }
        }

       stage('Deploy to EKS') {
    steps {
        withCredentials([usernamePassword(credentialsId: 'aws-creds', usernameVariable: 'AWS_ACCESS_KEY_ID', passwordVariable: 'AWS_SECRET_ACCESS_KEY')]) {
            sh '''
            echo "Setting AWS credentials..."
            export AWS_ACCESS_KEY_ID=$AWS_ACCESS_KEY_ID
            export AWS_SECRET_ACCESS_KEY=$AWS_SECRET_ACCESS_KEY
            export AWS_DEFAULT_REGION=us-east-1

            echo "Updating kubeconfig..."
            aws eks update-kubeconfig --region us-east-1 --name bookmyshow-eks

            echo "Deploying to EKS..."
            kubectl apply -f deployment.yml
            kubectl apply -f service.yml

            echo "Deployment status:"
            kubectl get pods
            kubectl get svc
            '''
        }
    }
}


    post {
        always {
            emailext(
                subject: "BMS Build Result: ${currentBuild.result}",
                body: "Pipeline completed with result: ${currentBuild.result}",
                to: "tejastejasa@gmail.com",
                attachLog: true,
                attachmentsPattern: "trivyfs.txt"
            )
        }
    }
}
