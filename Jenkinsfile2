pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'nodejs25'
        dockerTool 'docker'
        sonarscanner 'sonarqube-scanner'
    }

    environment {
        SCANNER_HOME = tool 'sonarqube-scanner'
        DOCKER_IMAGE = 'tejasgowramma123/flask-notes-app:2.0'
        EKS_CLUSTER_NAME = 'bookmyshow-eks'
        AWS_REGION = 'us-east-1'
    }

    stages {

        stage('Clean Workspace') {
            steps { cleanWs() }
        }

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonar-creds') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=BMS \
                        -Dsonar.projectName=BMS
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                waitForQualityGate abortPipeline: true, credentialsId: 'sonar-creds'
            }
        }

        stage('Install Dependencies') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    sh '''
                        cd bookmyshow-app
                        rm -rf node_modules package-lock.json
                        npm install
                    '''
                }
            }
        }

        stage('OWASP FS Scan') {
            steps {
                dependencyCheck odcInstallation: 'DP-Check',
                    additionalArguments: '--scan bookmyshow-app --disableAssembly --quick'
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs . > trivyfs.txt || true'
            }
        }

        stage('Docker Build & Push') {
            steps {
                withDockerRegistry(credentialsId: 'docker-creds', toolName: 'docker') {
                    sh """
                        docker build -t ${DOCKER_IMAGE} -f bookmyshow-app/Dockerfile bookmyshow-app
                        docker push ${DOCKER_IMAGE}
                    """
                }
            }
        }

        stage('Deploy to EKS Cluster') {
            steps {
                sh """
                    aws eks update-kubeconfig --region ${AWS_REGION} --name ${EKS_CLUSTER_NAME}
                    kubectl apply -f deployment.yml
                    kubectl apply -f service.yml
                """
            }
        }
    }

    post {
        always {
            emailext attachLog: true,
                subject: "Build: ${currentBuild.result}",
                body: "Job: ${JOB_NAME}<br/>Build Number: ${BUILD_NUMBER}<br/>URL: ${BUILD_URL}",
                to: 'tejastejasa@gmail.com',
                attachmentsPattern: 'trivyfs.txt'
        }
    }
}
