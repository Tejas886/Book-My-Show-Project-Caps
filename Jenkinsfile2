pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'nodejs25'
        maven 'maven3'
    }

    environment {
        SCANNER_HOME = tool 'sonarqube-scanner'
        AWS_REGION = 'us-east-1'
        EKS_CLUSTER_NAME = 'bookmyshow-eks'
        DOCKER_IMAGE = 'tejasgowramma123/flask-notes-app:2.0'
    }

    stages {

        stage('Checkout Code') {
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh """
                        ${SCANNER_HOME}/bin/sonar-scanner \
                        -Dsonar.projectKey=BMS \
                        -Dsonar.projectName=BMS
                    """
                }
            }
        }

        stage('Fast Quality Gate') {
            steps {
                timeout(time: 30, unit: 'SECONDS') {
                    waitForQualityGate abortPipeline: false, credentialsId: 'sonar-creds'
                }
            }
        }

        stage('Install Dependencies (FAST)') {
            steps {
                sh """
                    cd bookmyshow-app
                    npm ci
                """
            }
        }

        stage('Trivy File Scan (FAST MODE)') {
            steps {
                sh "trivy fs --exit-code 0 --severity CRITICAL . > trivyfs.txt"
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-creds', toolName: 'docker') {
                        sh """
                            docker build -t ${DOCKER_IMAGE} -f bookmyshow-app/Dockerfile bookmyshow-app
                            docker push ${DOCKER_IMAGE}
                        """
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh """
                    aws sts get-caller-identity
                    aws eks update-kubeconfig --name ${EKS_CLUSTER_NAME} --region ${AWS_REGION}
                    kubectl apply -f deployment.yml
                    kubectl apply -f service.yml
                """
            }
        }
    }

    post {
        always {
            emailext(
                to: "tejastejasa@gmail.com",
                subject: "Build Status: ${currentBuild.result}",
                body: "Pipeline Finished. Status: ${currentBuild.result}",
                attachLog: true
            )
        }
    }
}
