pipeline {
    agent any

    tools {
        maven 'maven3'
        jdk 'jdk17'
        nodejs 'nodejs25'
        dockerTool 'docker'
        // No OWASP tool here â†’ faster
    }

    environment {
        SONARQUBE_SERVER = credentials('sonar-creds')
        DOCKER_CREDENTIALS = credentials('docker-creds')
        AWS_CREDS = credentials('aws-creds')
        ECR_URL = "631218091219.dkr.ecr.us-east-1.amazonaws.com/bookmyshow"
        CLUSTER_NAME = "bookmyshow-eks"
        REGION = "us-east-1"
    }

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('Install Dependencies (Fast)') {
            steps {
                sh '''
                    echo "Installing backend packages fast..."
                    mvn -q clean install -DskipTests

                    echo "Installing frontend packages fast..."
                    cd client
                    npm install --silent
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh '''
                        sonar-scanner \
                        -Dsonar.projectKey=BMS \
                        -Dsonar.projectName=BMS
                    '''
                }
            }
        }

        stage('Quality Gate (Fast)') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh '''
                    echo "Running Trivy FAST scan..."
                    trivy fs . --exit-code 0 --severity CRITICAL,HIGH
                '''
            }
        }

        stage('Docker Build & Push (Fast)') {
            steps {
                sh '''
                    echo "Logging into ECR..."
                    aws ecr get-login-password --region us-east-1 | docker login --username AWS --password-stdin $ECR_URL

                    echo "Building Docker image fast..."
                    docker build -t bookmyshow-app .

                    echo "Tag & Push..."
                    docker tag bookmyshow-app:latest $ECR_URL:latest
                    docker push $ECR_URL:latest
                '''
            }
        }

        stage('Deploy to EKS (Fast)') {
            steps {
                sh '''
                    echo "Updating kubeconfig..."
                    aws eks update-kubeconfig --region us-east-1 --name bookmyshow-eks

                    echo "Deploying to EKS..."
                    kubectl set image deployment/bookmyshow bookmyshow=$ECR_URL:latest -n default

                    echo "Rolling update status..."
                    kubectl rollout status deployment/bookmyshow -n default
                '''
            }
        }
    }

    post {
        always {
            emailext(
                to: "tejastejasa@gmail.com",
                subject: "BookMyShow Pipeline Result",
                body: "Pipeline completed with status: ${currentBuild.currentResult}"
            )
        }
    }
}
