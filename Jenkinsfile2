pipeline {
    agent any

    tools {
        nodejs 'nodejs25'
        maven 'maven3'
        jdk 'jdk17'
        hudson.plugins.sonar.SonarRunnerInstallation 'sonarqube-scanner'
        dependencyCheck 'odc'
    }

    environment {
        DOCKER_HUB = credentials('docker-hub')
        AWS = credentials('aws-creds')
    }

    stages {

        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('Install Dependencies (FAST)') {
            steps {
                dir('bookmyshow-app') {
                    sh '''
                        echo "FAST NPM INSTALL..."
                        npm install --silent --no-audit --prefer-offline
                    '''
                }
            }
        }

        stage('SonarQube') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh '''
                        sonar-scanner \
                        -Dsonar.projectKey=BMS \
                        -Dsonar.sources=bookmyshow-app \
                        -Dsonar.exclusions=**/node_modules/**
                    '''
                }
            }
        }

        stage('Quality Gate (FAST)') {
            steps {
                timeout(time: 30, unit: 'SECONDS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('OWASP FS Scan (FAST)') {
            steps {
                dependencyCheckAnalyzer odcInstallation: 'odc',
                    scanPath: 'bookmyshow-app',
                    outputDirectory: 'odc-report',
                    isQuickEnabled: true
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs --severity CRITICAL bookmyshow-app'
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    sh '''
                        docker build -t tejas886/bookmyshow:latest bookmyshow-app
                    '''
                    withDockerRegistry(credentialsId: 'docker-hub', url: '') {
                        sh '''
                            docker push tejas886/bookmyshow:latest
                        '''
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh '''
                    aws eks update-kubeconfig --region us-east-1 --name bookmyshow-eks
                    kubectl apply -f deployment.yml
                    kubectl apply -f service.yml
                '''
            }
        }
    }

    post {
        always {
            emailext(
                to: "tejastejasa@gmail.com",
                subject: "Pipeline Completed",
                body: "Pipeline finished"
            )
        }
    }
}
