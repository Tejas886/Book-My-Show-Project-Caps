pipeline {
    agent any

    environment {
        SCANNER_HOME = tool 'sonarqube-scanner'
        NODE_HOME = tool 'nodejs25'
        JAVA_HOME = tool 'jdk17'
        DOCKER_BUILDKIT = "1"
        AWS_REGION = "us-east-1"
        EKS_CLUSTER_NAME = "bookmyshow-eks"
        IMAGE = "tejasgowramma123/bookmyshow:latest"
    }

    stages {

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh '''
                cd bookmyshow-app
                npm install --production
                '''
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh """
                    ${SCANNER_HOME}/bin/sonar-scanner \
                    -Dsonar.projectKey=BMS \
                    -Dsonar.projectName=BMS
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('OWASP FS Scan (FAST MODE)') {
            steps {
                dependencyCheck additionalArguments: '--scan bookmyshow-app --enableExperimental --disableAssembly --quick', odcInstallation: 'DP-Check'
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh "trivy fs bookmyshow-app > trivy.txt"
            }
        }

        stage('Docker Build & Push') {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker-creds') {
                        sh """
                        cd bookmyshow-app
                        docker build -t ${IMAGE} .
                        docker push ${IMAGE}
                        """
                    }
                }
            }
        }

        stage('Deploy to EKS') {
            steps {
                sh """
                aws eks update-kubeconfig --region ${AWS_REGION} --name ${EKS_CLUSTER_NAME}
                kubectl apply -f deployment.yml
                kubectl apply -f service.yml
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
