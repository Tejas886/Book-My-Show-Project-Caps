pipeline {
    agent any

    tools {
        nodejs 'nodejs25'
        maven 'maven3'
        dependencyCheck 'odc'
        sonarScanner 'sonarqube-scanner'
        dockerTool 'docker-latest'
    }

    environment {
        DOCKER_HUB = credentials('docker-creds')
        SONAR_TOKEN = credentials('sonar-creds')
        AWS_CREDS = credentials('aws-creds')
    }

    stages {

        stage('Checkout Code') {
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('Install Dependencies (Fast)') {
            steps {
                sh 'npm install --silent'
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube-scanner') {
                    sh """
                        sonar-scanner \
                        -Dsonar.projectKey=bookmyshow \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://3.80.91.197:9000 \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 1, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('OWASP Dependency Scan') {
            steps {
                sh """
                    dependency-check.sh \
                    --scan . \
                    --format HTML \
                    --project bookmyshow \
                    --out dependency-check-report
                """
            }
        }

        stage('Trivy FS Scan') {
            steps {
                sh 'trivy fs .'
            }
        }

        stage('Docker Build & Push') {
            steps {
                sh """
                    echo "${DOCKER_HUB_PSW}" | docker login -u "${DOCKER_HUB_USR}" --password-stdin
                    docker build -t tejas886/bookmyshow:latest .
                    docker push tejas886/bookmyshow:latest
                """
            }
        }

        stage('Deploy to EKS') {
            steps {
                withAWS(credentials: 'aws-creds', region: 'us-east-1') {
                    sh """
                        aws eks update-kubeconfig --region us-east-1 --name bookmyshow-eks
                        kubectl apply -f k8s/deployment.yaml
                        kubectl rollout restart deployment bookmyshow
                    """
                }
            }
        }
    }

    post {
        failure {
            emailext to: "tejastejasa@gmail.com",
            subject: "Pipeline Failed",
            body: "BookMyShow Pipeline Failed!"
        }
        success {
            emailext to: "tejastejasa@gmail.com",
            subject: "Pipeline Success",
            body: "BookMyShow Successfully Deployed to EKS!"
        }
    }
}
