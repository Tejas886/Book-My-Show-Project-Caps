pipeline {
    agent any

    tools {
        nodejs 'nodejs25'
        maven 'maven3'
        hudson.plugins.sonar.SonarRunnerInstallation 'sonarqube-scanner'
        org.jenkinsci.plugins.DependencyCheck.tools.DependencyCheckInstallation 'odc'
        dockerTool 'docker-latest'
    }

    environment {
        DOCKER_HUB = credentials('docker-creds')
        AWS_CREDS  = credentials('aws-creds')
        SONARQUBE_TOKEN = credentials('sonar-token')
        REGISTRY = "tejastejas/bookmyshow"
        IMAGE_TAG = "latest"
    }

    stages {

        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'main',
                    url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('Install Dependencies (Fast)') {
            steps {
                echo "Installing NPM packages fast mode..."
                sh """
                   cd bookmyshow-app
                   npm install --silent
                """
            }
        }

        stage('SonarQube Analysis (Fast)') {
            steps {
                withSonarQubeEnv('sonarserver') {
                    sh '''
                        sonar-scanner \
                          -Dsonar.projectKey=BMS \
                          -Dsonar.sources=bookmyshow-app \
                          -Dsonar.exclusions=**/node_modules/** \
                          -Dsonar.token=$SONARQUBE_TOKEN
                    '''
                }
            }
        }

        stage('OWASP FS Scan (Fast)') {
            steps {
                sh '''
                    dependency-check.sh \
                    --project "BMS" \
                    --scan bookmyshow-app \
                    --format HTML \
                    --noupdate \
                    --out ./odc-report
                '''
            }
        }

        stage('Trivy FS Scan (Fast)') {
            steps {
                sh '''
                    trivy fs --scanners vuln --exit-code 0 .
                '''
            }
        }

        stage('Docker Build & Push (Fast)') {
            steps {
                script {
                    sh """
                        docker login -u $DOCKER_HUB_USR -p $DOCKER_HUB_PSW
                        docker build -t $REGISTRY:$IMAGE_TAG .
                        docker push $REGISTRY:$IMAGE_TAG
                    """
                }
            }
        }

        stage('Deploy to EKS (Fast)') {
            steps {
                sh '''
                    aws eks update-kubeconfig --region us-east-1 --name bookmyshow-eks

                    kubectl set image deployment/bookmyshow \
                    bookmyshow=$REGISTRY:$IMAGE_TAG
                '''
            }
        }
    }

    post {
        always {
            emailext(
                to: 'tejastejasa@gmail.com',
                subject: "BookMyShow Pipeline: ${currentBuild.currentResult}",
                body: "Pipeline finished with status: ${currentBuild.currentResult}"
            )
        }
    }
}
