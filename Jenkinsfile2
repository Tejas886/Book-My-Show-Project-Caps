pipeline {
    agent any

    tools {
        nodejs 'nodejs25'
        maven 'maven3'
        dependency-check 'odc'
        dockerTool 'docker-latest'
        sonarqubeScanner 'sonarqube-scanner'
    }

    environment {
        DOCKER_HUB = credentials('docker-creds')
        SONAR_TOKEN = credentials('sonar-creds')
        AWS_CREDS = credentials('aws-creds')
        IMAGE = "tejastejas/bookmyshow-fast"
        TAG = "latest"
        CLUSTER_NAME = "bookmyshow-eks"
        REGION = "us-east-1"
    }

    stages {

        stage('Checkout Code') {
            steps {
                cleanWs()
                git branch: 'main', url: 'https://github.com/Tejas886/Book-My-Show-Project-Caps.git'
            }
        }

        stage('Install Dependencies (Fast)') {
            steps {
                sh """
                    npm install --silent
                """
            }
        }

        stage('SonarQube Analysis') {
            steps {
                withSonarQubeEnv('sonarqube-server') {
                    sh """
                        sonar-scanner \
                        -Dsonar.projectKey=bookmyshow \
                        -Dsonar.sources=. \
                        -Dsonar.host.url=http://3.80.91.197:9000 \
                        -Dsonar.login=$SONAR_TOKEN
                    """
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 2, unit: 'MINUTES') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('OWASP FS Scan (Fast)') {
            steps {
                sh """
                    dependency-check.sh --scan . --format ALL --out owasp-report
                """
            }
        }

        stage('Docker Build & Push (Fast)') {
            steps {
                sh """
                    echo "$DOCKER_HUB_PSW" | docker login -u "$DOCKER_HUB_USR" --password-stdin
                    docker build -t $IMAGE:$TAG .
                    docker push $IMAGE:$TAG
                """
            }
        }

        stage('Deploy to EKS (Fast)') {
            steps {
                withAWS(credentials: 'aws-creds', region: 'us-east-1') {
                    sh """
                        aws eks update-kubeconfig --region $REGION --name $CLUSTER_NAME

                        kubectl set image deployment/bookmyshow bookmyshow=$IMAGE:$TAG -n default || \
                        kubectl apply -f k8s/deployment.yaml
                    """
                }
            }
        }
    }

    post {
        always {
            emailext(
                to: "tejastejasa@gmail.com",
                subject: "BookMyShow Pipeline Status: ${currentBuild.currentResult}",
                body: "Pipeline finished with status: ${currentBuild.currentResult}"
            )
        }
    }
}
